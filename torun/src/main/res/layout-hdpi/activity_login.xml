
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loding_bg"
    tools:context="org.dian.torun.ui.activity.LoginActivity">

    <ImageView
        android:id="@+id/login_ic"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_login"
        android:layout_width="117dp"
        android:layout_height="153dp" />

    <ImageView
        android:id="@+id/login_text"
        android:layout_marginTop="35dp"
        android:layout_below="@id/login_ic"
        android:background="@drawable/ic_login_text"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/login_progress"
        android:visibility="invisible"
        android:background="@drawable/loading_drawable"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/login_text"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/login_weibo"
        android:background="@drawable/btn_login"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        />

    <ImageView
        android:src="@drawable/ic_login_dian"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
